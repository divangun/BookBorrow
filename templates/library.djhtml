{% extends 'base.djhtml' %}

{% block contents %}

<section id="library">
    <div class="row-fluid">
        <div class="span8">
            <h1>{{ library.name }}</h1>
            <p>{{ library.intro }}</p>
        </div>
        <div class="span4">
            {% ifequal user library.user %}
            <div class="btn-group pull-right">
                <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
                    관리 메뉴 <span class="caret"></span>
                </a>
                
                <ul class="dropdown-menu">
                    <li><a href="/book/add/">책 추가하기</a></li>
                    <li><a href="{{library.get_absolute_url}}manage/">관리하기</a></li>
                </ul>
            </div>
            {% endifequal %}
            <button type="button" class="btn btn-small btn-inverse" id="star"><i class="icon-white icon-star"></i></button>
            <button type="button" class="btn btn-small" id="star"><i class="icon icon-star"></i><i class="icon icon-remove"></i></button>
        </div>
        <div class="span12">
            <ul>
                {% for book in books %}
                    <li>
                        <a href="{{book.get_absolute_url}}">{{ book.book_info.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</section>

{% endblock %}